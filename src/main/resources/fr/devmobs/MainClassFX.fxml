<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane style="-fx-border-width: 2;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.devmobs.MainClassFXController">
   <top>
      <HBox alignment="TOP_LEFT" style="-fx-padding: 8;" BorderPane.alignment="CENTER">
         <TextField fx:id="ScratchInputTextField" promptText="Scratch" />
         <Region maxWidth="20" minWidth="20" prefWidth="20" />
         <TextField fx:id="FinalInputTextField" promptText="Final" />
         <Region HBox.hgrow="ALWAYS" />
         <Button fx:id="swapButton" alignment="CENTER" text="Swap" />

      </HBox>
   </top>
    <bottom>
    <HBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 8;" BorderPane.alignment="CENTER">
            <Button fx:id="displayButton" alignment="CENTER" text="Display" />
            <Button fx:id="quitButton" alignment="CENTER" text="Quit" />
        </HBox>
    </bottom>
</BorderPane>
